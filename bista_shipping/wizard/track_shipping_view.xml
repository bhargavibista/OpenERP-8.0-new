<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_track_shipping_wizard" model="ir.ui.view">
          <field name="name">track.shipping.wizrad</field>
          <field name="model">track.shipping</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
              <form string="Track Your Shipping">
                  <field name="tracking_number" nolabel="1"/>
                  <newline/>
                  <button name="track_service" string="Track Shipping" type="object" icon="terp-gtk-go-back-rtl"/>
                 <separator string="Response Message" colspan="4" col="2" />
                  <field name="response_message" nolabel="1"/>
                  <newline/>
                  <button name="close_button" string="Close" type="object" icon="terp-gtk-go-back-ltr"/>
              </form>
          </field>
       </record>

        <act_window name="Track Shipping"
            res_model="track.shipping"
            src_model="stock.picking"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_track_shipping_wizard"/>
            <menuitem action="action_view_track_shipping_wizard" id="menu_track_shipping" parent="stock.menu_stock_warehouse_mgmt" sequence="5" string="Track Shpiing"/>

    </data>
</openerp>