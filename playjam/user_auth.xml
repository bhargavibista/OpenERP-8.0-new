<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
    <menuitem id="authentication_menu" name="Playjam" sequence="5" />
    <record id="user_auth_tree_view" model="ir.ui.view">
            <field name="name">User Authentication</field>
            <field name="model">user.auth</field>
            <field name="arch" type="xml">
                <tree string="Authentication">
                    <field name="partner_id"/>
		    <field name="serial_no" />
		    <field name="device_id"/>
                    <field name="is_registered"/>
                    <field name="code"/>
                    <field name="key"/>
                </tree>
            </field>
        </record>



        <record id="view_user_auth_form" model="ir.ui.view">
            <field name="name">user.auth.form</field>
            <field name="model">user.auth</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Authentication" version="7.0">
                    
                    <sheet>
                        <group>
                                <field name="partner_id"/>
<!--                        </group>-->
				<field name="serial_no" />
				 <field name="device_id" /> 
                                <field name="is_registered"/>
                                <field name="code"/>
                                 <field name="key" />
                                 <field name="challenge" />
                                 <field name="session_token" />
                                 <field name="insecure_token" />
                                 <field name="duration" />
                                 <field name="token_exp_time" />
				<field name="mac_address" />
			 	<field name="is_activated" />
				<field name="is_tru" />
				<field name="is_attached" />
                         </group>
                        

			<notebook>
                        <page string="Device History">
                            <field name="device_history_ids" nolabel="1">

                                <tree string="Device History" editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="device_id"/>
                                    <field name="key"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>


                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_send_auth_form" model="ir.actions.act_window">
            <field name="name">Authentication Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">user.auth</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="user_auth_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                 .
              </p><p>
                OpenERP helps you easily track all activities related to
                Fax.
              </p>
            </field>
        </record>

        <menuitem id="user_auth_menu" sequence="2" parent="authentication_menu" name="Authentication Details"/>
        <menuitem id="user_auth_menu_two" action="action_send_auth_form" sequence="2" parent="user_auth_menu"/>


    </data>
</openerp>
