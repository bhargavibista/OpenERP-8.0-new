<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
<!--    <menuitem id="authentication_menu" name="Authentication Details" sequence="2" />-->
    <record id="voucher_tree_view" model="ir.ui.view">
            <field name="name">Voucher Details</field>
            <field name="model">voucher.details</field>
            <field name="arch" type="xml">
                <tree string="Voucher Details">
<!--                    <field name="name"/>-->
                    <field name="voucher_code" />
                    <field name="consumed"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>



        <record id="voucher_form_view" model="ir.ui.view">
            <field name="name">voucher.details.form</field>
            <field name="model">voucher.details</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Voucher Details" version="7.0">

                    <sheet>
                        <group>
                                <field name="name"/>
                                <field name="voucher_code" />
                                <field name="consumed"/>
                                <field name="type"/>
                                <field name="expiration"/>
                                <field name="flare_bucks" attrs="{'invisible': [('type','!=', 'facevalue')]}"/>
                                <field name="credit" attrs="{'invisible': [('type','!=', 'facevalue')]}"/>
                                <field name="rental_apps" attrs="{'invisible': [('type','!=', 'rental')]}"/>
                         </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_voucher_form" model="ir.actions.act_window">
            <field name="name">Voucher Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">voucher.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="voucher_tree_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                 .
              </p><p>
                OpenERP helps you easily track all activities related to
                Fax.
              </p>
            </field>
        </record>

<!--        <menuitem id="user_auth_menu" sequence="2" parent="authentication_menu" name="Authentication Details"/>-->
        <menuitem id="voucher_menu" action="action_voucher_form" sequence="5" parent="user_auth_menu" name="Voucher Details"/>


    </data>
</openerp>