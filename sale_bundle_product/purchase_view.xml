<openerp>
    <data>
    
        <!-- INHERITED VIEW FOR THE OBJECT : purchase_order_line -->

		<record id="purchase_order_line_view_form" model="ir.ui.view">
			<field name="name">sale_bundle_product.purchase_order_line.view_form</field>
			<field name="model">purchase.order.line</field>
			<field name="inherit_id" ref="purchase.purchase_order_line_form" />
                        <field eval="16" name="priority"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
			<data>
                                    <!--<xpath expr="/form/sheet/notebook/page[@string='Purchase Order']/field[@name='notes']" position="before">-->
                            <page string="Notes" position="after">
                                <page string="Choosen Configuration">
                                                <label for="so_line_item_set_ids"/>
                                          <field name="so_line_item_set_ids" nolabel="1"/>
                                </page>
                            </page>
                       </data>          <!--</xpath>-->
				
			</field>
		</record>

                <record id="purchase_order_view_form_sale_bundle" model="ir.ui.view">
			<field name="name">sale_bundle_product.purchase_order.view_form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
                        <field eval="16" name="priority"/>
			<field name="type">form</field>
			<field name="arch" type="xml">

                        <xpath expr="/form/sheet/notebook/page[@string='Products']/field[@name='order_line']/tree" position="attributes">  <!--cox gen2 changed page string Purchase order to Products-->
                            <attribute name="editable"></attribute>
                         </xpath>

			</field>
		</record>

    </data>
</openerp>
