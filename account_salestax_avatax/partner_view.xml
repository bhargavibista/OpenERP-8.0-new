<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
    Partner Tax & Address Validation
    -->
        <record id="view_partner_details_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.details.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Accounting']/field[@name='bank_ids']" position="before">
                    <group col="1" colspan="2">
                        <separator string="Tax Details" colspan="2" col="2"/>
                        <field name="tax_schedule_id"/>
                        <field name="exemption_number"/>
                        <field name="exemption_code_id"/>
                    </group>
                </xpath>
            </field>
        </record>
        <!--
    Partner Address
    -->
        <record id="view_partner_address_details_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.details.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!--<xpath expr="/form/sheet/group/group[1]/div[2]/div/field[@name='zip']" position="after">
            <field name="latitude"  placeholder="Latitude"/>
            <field name="longitude"  placeholder="Longitude"/>

        </xpath>-->
                <notebook position="inside">
               <page string ="Avatax Validation" position="inside">
                    <group colspan="4" col="6">
                        <field name="latitude"  placeholder="Latitude" readonly="True"/>
                        <field name="longitude"  placeholder="Longitude" readonly="True"/>
                        <newline/>
                        <separator string="Validation" />
                        <newline/>
                        <field name="date_validation" />
                        <field name="validation_method"/>
                        <newline/>
                        <button name="%(action_account_salestax_avatax_address_validate)d" string="_Validate" type="action" icon="gtk-go-forward" colspan="2" context="{'from_validate_button': True}"/>
                    </group>
                    </page></notebook>
            </field>
        </record>

    </data>
</openerp>
