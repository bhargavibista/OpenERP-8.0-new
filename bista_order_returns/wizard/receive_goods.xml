<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_recieve_goods" model="ir.ui.view">
            <field name="name">view.recieve.goods</field>
            <field name="model">receive.goods</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="">
                    <group col="4" colspan="4">
                        <separator string="Will the customer be returning hardware?" colspan="8"/>
                        <newline/>
                        <button name="receive_goods" string="Yes - In Hand or Shipment Needed" type="object" icon="gtk-apply"/>
                        <button name="no_receive_goods" string="No - Hardware Will Not Be Returned" type="object" icon="gtk-cancel"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_receive_goods" model="ir.actions.act_window">
            <field name="name">Goods Received</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">receive.goods</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_recieve_goods"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
