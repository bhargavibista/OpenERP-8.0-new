        <record id="board_replenish_form" model="ir.ui.view">
            <field name="name">board.replenish.form</field>
            <field name="model">board.board</field>
            <field name="arch" type="xml">
                <form string="Replenish Dashboard" version="7.0">
                    <board style="1-1-1">
                        <column>
                            <action name="%(action_replenish_incoming_shipment)d" string="Replenish Order"/>
                        </column>
                        <column>
                            <action name="%(action_replenish_rules)d" string="Replenish Rules"/>
                        </column>
                        <column>
                            <action name="%(action_replenish_delivery_shipment)d" string="Replenish Delivery Shipment"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record id="open_board_replenish" model="ir.actions.act_window">
            <field name="name">Replenish</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="board_replenish_form"/>
        </record>

        <menuitem id="menu_dashboard_replenish"
                  sequence="15"
                  parent="base.menu_reporting_dashboard"
                  action="open_board_replenish"
                  groups="base.group_sale_salesman"/>

