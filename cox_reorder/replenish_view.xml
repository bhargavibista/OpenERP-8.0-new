<openerp>
    <data>
        <!-- Sales dashboard -->
        <record id="action_replenish_incoming_shipment" model="ir.actions.act_window">
            <field name="name">Replenish Orders</field>
            <field name="res_model">stock.replenish</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','out'),('state','=','draft'),('origin','ilike','RE')]</field>
            <field name="view_id" ref="stock_replenish_tree"/>
        </record>

        <record id="action_replenish_rules" model="ir.actions.act_window">
            <field name="name">Replenish Rules</field>
            <field name="res_model">stock.warehouse.replenish</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="cox_reorder.view_stock_warehouse_replenish_tree"/>
        </record>

        <record id="action_replenish_delivery_shipment" model="ir.actions.act_window">
            <field name="name">Replenish Delivery Order</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_id.code','=','outgoing'),('state','=','draft'),('origin','ilike','RE')]</field>
            <field name="view_id" ref="stock.vpicktree"/>
        </record>



