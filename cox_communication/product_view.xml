        <record id="product_product_form_view_cox" model="ir.ui.view">
            <field name="name">product.normal.form_cox_comm</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet/div/div/div/field[@name='sale_ok']" position="before"> <!--cox gen2-->
                        <group>
                            <field name="unique_offer_id"/>
                            <field name="free_trail_days" attrs="{'invisible':[('type','&lt;&gt;','service')]}"/>
                            <field name="product_type" required="1"/>
                            <!--<field name="recurring_service" attrs="{'invisible':[('type','&lt;&gt;','service')]}"/>-->
                            <field name="app_id" attrs="{'invisible':[('type','&lt;&gt;','service')],'required':[('type','=','service')]}"/>
                            <!--<label for="recurring_service"/>-->
<!--		       <field name="start_date"/>-->
			<field name="location_id"/>
                        </group>
                    </xpath>
                   <!--<xpath expr="/form/sheet/div/div/label[@for='purchase_ok']" position="after">
                       <field name="recurring_service" attrs="{'invisible':[('type','&lt;&gt;','service')]}"/>
                       <label for="recurring_service"/>
                   </xpath>-->
                    <xpath expr="/form/sheet/notebook" position="inside">
                        <page string="Service Promotional Rules" attrs="{'invisible':['|',('type','&lt;&gt;','service'),('recurring_service','&lt;&gt;',True)]}">
                            <field name="service_promotional_rules"  nolabel="1" colspan="8">
                                <tree string="Promotional Rules">
                                    <field name="start_range_month"/>
                                    <field name="end_range_month"/>
                                    <field name="service_charge_amt"/>
                                </tree>
                                <form string="Promotional Rules">
                                    <field name="start_range_month" required="1" on_change="onchange_date_range(start_range_month,end_range_month,product_id,context)" context="{'product_id':parent.id}"/>
                                    <field name="end_range_month" required="1" on_change="onchange_date_range(start_range_month,end_range_month,product_id,context)" context="{'product_id':parent.id}"/>
                                    <field name="service_charge_amt" required="1"/>
                                    <field name="product_id" invisible="1"/>
                                </form>
                            </field>
                        </page>
                    </xpath>
                    <xpath expr="/form/sheet/notebook" position="inside">
                        <page string="Termination Fee Charges" >
                            <field name="termination_fees_charges"  nolabel="1" colspan="8">
                                <tree string="Termination Fee Charges">
                                    <field name="start_range_days"/>
                                    <field name="end_range_days"/>
                                    <field name="termination_fees"/>
                                </tree>
                                <form string="Termination Fee Charges">
                                    <field name="start_range_days" required="1" on_change="onchange_date_range(start_range_days,end_range_days,product_id,context)" context="{'product_id':parent.id,'one2many_field':parent.termination_fees_charges}"/>
                                    <field name="end_range_days" required="1" on_change="onchange_date_range(start_range_days,end_range_days,product_id,context)" context="{'product_id':parent.id,'one2many_field':parent.termination_fees_charges}"/>
                                    <field name="termination_fees" required="1"/>
                                    <field name="product_id" invisible="1"/>
                                </form>
                            </field>
                        </page>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page[@string='Inventory']/group/group[@name='weight']/field[@name='weight_net']" position="after">
                        <field name="prod_length"/>
                        <field name="prod_width"/>
                        <field name="prod_height"/>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page[@string='Accounting']/group/group[1]/field[@name='taxes_id']" position="after">
                        <field name="property_account_line_prepaid_revenue" domain="[('type','=','other')]" groups="account.group_account_user"/>
                    </xpath>
                </data>
            </field>
        </record>
        <!--cox gen2-->
        <record model="ir.ui.view" id="view_product_real_quantity_cox">
            <field name="name">view.product.real.quantity.cox</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='state']" position="after">
                   <field name="magento_product_id" string="Magento Product ID"/>
               </xpath>
            </field>
        </record>

<!-- View for Pre-Requisites for the Product Category-->
        <record id="product_category_pre_requisites_cox" model="ir.ui.view">
            <field name="name">product.category.pre.requisites.cox</field>
            <field name="model">product.category</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock_account.view_category_property_form"/> <!--cox gen2 changed module stock to stock_account-->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_stock_journal']" position="after">
                    <newline/>
                    <field name="property_account_line_prepaid_revenue_categ" domain="[('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation')]"/>

                    <group colspan="8">
                        <separator string="Pre-Requisites" colspan="8"/>
                        <field name="pre_requisites" nolabel="1" colspan="8">
                            <tree string="Pre-Requisites" editable="bottom">
                                <field name="name" />
                            </tree>
                            <form string="Pre-Requisites">
                                <field name="name"/>
                            </form>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
        <!--code done by yogita-->
        <record id="product_normal_extra_configuration_recurring" model="ir.ui.view">
            <field name="name">product.normal.extra.configuration.recurring</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="sub_product_combination.product_normal_extra_configuration" />
            <field name="arch" type="xml">
                <xpath expr="//form/group/field[@name='price']" position="after">
                    <!--<field name="offer_discount" invisible='1'/>Preeti for product configuration-->
                    <field name="show_recurring"/>
                    <field name="recurring_price" attrs="{'required':[('show_recurring','!=',False)],'invisible':[('show_recurring','=',False)]}" />
                    <field name="no_recurring" attrs="{'invisible':[('show_recurring','=',False)]}"/>
                 </xpath>
                <xpath expr="//tree/field[@name='price']" position="after">
                    <!--<field name="offer_discount"/>Preeti for product configuration-->
                    <field name="recurring_price"/>
                    <field name="no_recurring"/>
                 </xpath>
                 <xpath expr="//form/group/field[@name='comp_product_id']" position="attributes">
                     <attribute name="domain">[('product_type','&lt;&gt;','offer')]</attribute>
                 </xpath><!--do not allow to select offer product in sub components by yogita-->
            </field>
        </record>
    </data>
</openerp>
