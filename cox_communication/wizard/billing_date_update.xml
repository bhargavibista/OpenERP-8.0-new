<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_billing_date_update" model="ir.ui.view">
            <field name="name">view.billing.date.update</field>
            <field name="model">billing.date.update</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Update Billing Date">
                    <!--<field name="save_report_loc"/>-->
                    <newline/>
                    <field name="billing_date"/>
                    <field name="minimum_date" invisible="1"/>
                    <field name="partner_id"/>
                    <separator colspan="4" string="Change Date for Selected Service" />
                    <group colspan="4" col="4">
                    <field name="active_service" nolabel="1">
                        <tree string="Selected Services" editable="bottom">
                            <field name="service_name" readonly="1"/>
                            <field name="sale_id" readonly="1"/>
                            <field name="start_date" on_change="onchange_start_date(start_date,policy_id,context)" context="{'minimum_date':parent.minimum_date}"/>
                            <field name="end_date" readonly="1"/>
                            <field name="policy_id" invisible="1"/>
                        </tree>
                        </field>
                    <newline/>
                    <button name="update_date" string="Update Billing" type="object"/>
                    </group>
               </form>
            </field>
        </record>

<!--        <act_window name="Update Billing Date"
            res_model="billing.date.update"
            src_model="res.partner"
            view_mode="form"
            target="new"
            id="action_view_update_billing_date"/>-->
    </data>
</openerp>
