<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_send_mail_manual" model="ir.ui.view">
            <field name="name">send.mail.manual</field>
            <field name="model">send.mail.manual</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Send Emails">
                    <group colspan="4">
                        <field name="email_to" colspan="4" required="True"/>
                        <!--<field name="smtp_server" colspan="4" required="True"/>-->
                        <field name="mail_server_id" colspan="4" required="True"/>
                        <field name="template" colspan="4" on_change="onchange_template(template,context)"/>
                        <newline/>
                        <field name="subject" colspan="4"/>
                    </group>
                    <newline/>
                    <notebook colspan="8">
                        <page string="Body">
                            <separator string="Email Body"/>
                           <newline/>
                           <field name="notes" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachments" colspan="4" nolabel="1">
                                <form string="PDF Attachment">
                                    <field name="name" colspan="4"/>
                                    <field name="data" filename='name' colspan="4" />
                                </form>
                                <tree string="PDF Attachment">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <newline/>
                    <button icon='gtk-ok' string="Send Email" type="object" name="mail_send"/>
                    <button icon='gtk-cancel' special="cancel" string="Cancel"/>
                </form>
            </field>
        </record>
        <record id="action_send_mail_manual" model="ir.actions.act_window">
            <field name="name">Send Email</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">send.mail.manual</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_send_mail_manual"/>
            <field name="target">new</field>
        </record>
        <menuitem action="action_send_mail_manual" id="menu_send_mail_cox" parent="base.menu_config" sequence="5" string="Send Mail"/>
        <act_window name="Send Email"
            res_model="send.mail.manual"
            src_model="sale.order"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_send_mail_manual_sales"/>
       <act_window name="Send Email"
            res_model="send.mail.manual"
            src_model="return.order"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_send_mail_manual_return"/>
       <act_window name="Send Email"
            res_model="send.mail.manual"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_send_mail_manual_invoice"/>
        <act_window name="Send Email"
            res_model="send.mail.manual"
            src_model="partner.payment.error"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_send_mail_manual_payment"/>
        <act_window name="Send Email"
            res_model="send.mail.manual"
            src_model="res.partner"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_send_mail_res_partner"/>
        <act_window name="Send Email"
            res_model="send.mail.manual"
            src_model="vista.report"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_send_mail_vista_report"/>
    </data>
</openerp>