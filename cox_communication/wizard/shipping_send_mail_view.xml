<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_send_mail_option" model="ir.ui.view">
            <field name="name">view.send.mail.option</field>
            <field name="model">send.mail.option</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Do you Want to Send Mail">
                    <separator string="Do you Want to Send Mail" colspan="8"/>
                    <button name="process_send_mail" string="Yes" type="object"/>
                    <button name="donot_process_send_mail" string="No" type="object"/>
                </form>
            </field>
        </record>
        
        <record id="view_shipping_send_mail" model="ir.ui.view">
            <field name="name">shipping.send.mail</field>
            <field name="model">shipping.send.mail</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Send Emails" version="7.0">
                    <group colspan="4">
                        <field name="email_to" colspan="4" required="True"/>
                        <field name="mail_server_id" colspan="4" required="True"/>
                        <field name="template" colspan="4" on_change="onchange_template(template,context)"/>
                        <newline/>
                        <field name="subject" colspan="4"/>
                    </group>
                    <newline/>
                    <notebook colspan="8">
                        <page string="Body">
                            <separator string="Email Body"/>
                           <newline/>
                           <field name="notes" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachments" colspan="4" nolabel="1">
                                <form string="PDF Attachment">
                                    <field name="name" colspan="4"/>
                                    <field name="data" filename='name' colspan="4" />
                                </form>
                                <tree string="PDF Attachment">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <newline/>
                    <button icon='gtk-ok' string="Send Email" type="object" name="mail_send"/>
                    <button icon='gtk-cancel' string="Cancel" type="object" name="donot_mail_send"/>
                </form>
            </field>
        </record>
        <record id="action_shipping_send_mail" model="ir.actions.act_window">
            <field name="name">Send Email</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shipping.send.mail</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_send_mail_manual"/>
            <field name="target">new</field>
        </record>
        
        <act_window name="Send Email"
            res_model="shipping.send.mail"
            src_model="sale.order"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_shipping_send_mail_sales"/>
       <act_window name="Send Email"
            res_model="shipping.send.mail"
            src_model="stock.picking"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_shipping_send_mail_picking"/>
       
    </data>
</openerp>