<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
         <record id="view_serial_stock_move" model="ir.ui.view">
            <field name="name">view.serial.stock.move.wizard</field>
            <field name="model">serial.stock.move.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Add Serial Number">
                    <separator colspan="4" string="Add Serial Number for Selected Products" />
                    <field name="serial_move_id" nolabel="1">
                        <tree string="Stock Move" editable="bottom">
                            <field name="product_id" readonly="1"/>
                            <field name="qty" readonly="1"/>
                            <field name="serial_number" width="600" required="1" on_change="onchange_serial(serial_number,context)"/>
                        </tree>
                        </field>
                    <newline/>
                    <button name="assign_serial" string="Assign Serial" type="object"/>
               </form>
            </field>
        </record>

        <act_window name="Add Serial Number"
            res_model="serial.stock.move.wizard"
            src_model="stock.picking"
            view_mode="form"
            target="new"
            id="action_view_serial_stock_move"/>
    </data>
</openerp>
