<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_magento_data_export" model="ir.ui.view">
            <field name="name">view.magento.data.export</field>
            <field name="model">magento.data.export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Magento Data Export">
                    <field name="type" required="True" on_change="onchange_type(type)" colspan="4"/>
                    <field name="website_id" attrs="{'invisible':[('type','in',('service_update','status_update','recurring_export','service_export','sale_order_export'))]}" colspan="4"/>
                    <field name="shop_id" attrs="{'invisible':[('type','in',('service_update','status_update','recurring_export','service_export','sale_order_export'))]}" colspan="4"/>
                    <newline/>
                    <group attrs="{'invisible':[('type','in',('service_update','status_update','recurring_export','sale_order_export'))]}" colspan="4">
                    <separator string="Active Customers" colspan="4"/>
                    </group>
                    <field name="active_customers" colspan="8" nolabel="1" attrs="{'invisible':[('type','in',('service_update','status_update','recurring_export','sale_order_export'))]}"/>
                    <field name="recurring_invoices" colspan="8" nolabel="1" attrs="{'invisible':[('type','in',('service_update','status_update','cust_export','service_export','sale_order_export'))]}"/>
                    <field name="exporting_so" colspan="8" nolabel="1" attrs="{'invisible':[('type','in',('service_update','cust_export','service_export','recurring_export'))]}"/>
                    <button name="perform_action" string="Perform Action" type="object"/>
                </form>
            </field>
        </record>
        <record id="action_magento_data_export" model="ir.actions.act_window">
            <field name="name">Magento Data Export</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">magento.data.export</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_magento_data_export"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_mag_data_export" parent="base.menu_config" action="action_magento_data_export" name="Magento Data Export"/>
    </data>
</openerp>
