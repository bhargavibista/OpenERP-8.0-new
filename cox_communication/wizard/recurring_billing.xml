<openerp>
    <data>
         <record id="view_recurring_refunds" model="ir.ui.view">
          <field name="name">view.recurring.funds</field>
          <field name="model">recurring.refunds</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
              <form string="Service Credit">
                  <field name="invoice_ids"/>
                  <newline/>
                  <button name="recurring_refund" type="object" string="Refund" colspan="8"/>
              </form>
          </field>
       </record>

        <record id="action_view_recurring_invoices" model="ir.actions.act_window">
            <field name="name">Recurring Invoices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">recurring.refunds</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_recurring_refunds"/>
            <field name="target">new</field>
        </record>

        <act_window name="Refund Recurring Invoices"
            res_model="recurring.refunds"
            src_model="sale.order"
            view_mode="form"
            target="new"
            id="action_view_recurring_invoices_sales"/>
    </data>
</openerp>
