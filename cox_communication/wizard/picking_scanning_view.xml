<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_picking_unrequired" model="ir.ui.view">
            <field name="name">product.picking.unrequired</field>
            <field name="model">picking.scanning</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="barcode_scanning.view_picking_scanning_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='new_product_id']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='start_range']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='skip_barcode']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="attrs">{'invisible':[('new_product_id', '=', False)],'required':[('new_product_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='new_product_id']" position="after">
                    <field name="active_model" invisible="1"/>
                    <field name="pick_up_location" invisible="1"/>
                    <field name="src_location" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
