<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_return_refund_cancel" model="ir.ui.view">
            <field name="name">view.return.refund.cancel</field>
            <field name="model">return.refund.cancellation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
               <form string="Refund/Cancel Form" version="7.0">
                    <field name="refund_cancel" invisible="1"/>
		    <separator string="Click below to Finalize the Payment " attrs="{'invisible':[('refund_cancel','=','cancel')]}" />
                    <separator string="Click below to Cancel the Service " attrs="{'invisible':[('refund_cancel','=','refund')]}" />
                    <button name="create_refund" type="object" string="Create Refund" attrs="{'invisible':[('refund_cancel','=','cancel')]}" icon="gtk-apply"/>
                    <button name="cancel_service" type="object" string="Cancel Service" attrs="{'invisible':[('refund_cancel','=','refund')]}" icon="gtk-apply"/>
                </form>
            </field>
        </record>
    </data>
</openerp>
