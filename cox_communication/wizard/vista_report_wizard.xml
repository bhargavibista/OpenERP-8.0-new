<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_export_vista_report" model="ir.ui.view">
            <field name="name">view.export.vista.report</field>
            <field name="model">vista.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Vista Report">
                    <field name="option"/>
                    <newline/>
                    <group colspan="4" col="4" attrs="{'invisible':[('option','!=','create_report')]}" >
                       <separator colspan="4" string="Generate Report" />
                       <field name="date_create"/>
                        <button name="create_report" string="Create Report" type="object" icon="gtk-apply"/>
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    </group>
                    <group colspan="4" col="4" attrs="{'invisible':[('option','!=','import_report')]}">
                        <separator colspan="4" string="Import Report" />
                        <field name="csv_file"/>
                        <button name="import_report" string="Import Report" type="object" icon="gtk-apply"/>
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    </group>
                    <!--<button special="cancel" string="Cancel" icon="gtk-cancel"/>-->
                </form>
            </field>
        </record>


        <record id="action_export_vista_report" model="ir.actions.act_window">
            <field name="name">Import/Export Vista Report </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vista.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_export_vista_report"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_export_vista_report" id="menu_open_vista_report_wizard" parent="menu_vista_warehouse_mgmt" sequence="2" string="Import/Export Vista Report"/>

    </data>
</openerp>