<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_indidual_payment" model="ir.ui.view">
            <field name="name">view.partner.pending.payment</field>
            <field name="model">partner.individual.payment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Payment of Customer">
                    <separator colspan="4" string="Advance Payment of Customers" />
                    <!--<field name="save_report_loc"/>-->
                    <newline/>
                    <group>
                    <field name="billing_date"/>
                    <field name="partner_id"/>
                    </group>
                    <button name="capture_payment" string="Capture Payment" type="object"/>
               </form>
            </field>
        </record>

        <act_window name="Advance Payments of Customer"
            res_model="partner.individual.payment"
            src_model="res.partner"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_partner_indidual_payment"/>
    </data>
</openerp>