<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_export_customer_history_wizard" model="ir.ui.view">
            <field name="name">Export Customer History</field>
            <field name="model">export.customer.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export Customer History">
                    <separator string="Customer Detail Report" colspan="4"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <group>
                        <field name="csv_file" string="File"  readonly="1" filename='name'  attrs="{'invisible':[('name','=','')]}"/>
                        <field name="name" readonly="1" invisible="1" attrs="{'invisible':[('csv_file','=','')]}"/>
                    </group>
                    
                    <newline/>
                    <group>
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="export_customer_details" string="Export" type="object" icon="gtk-apply"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_view_export_customer_history" model="ir.actions.act_window">
            <field name="name">Export Customer History</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.customer.history</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_export_customer_history_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_view_export_customer_history" parent="base.next_id_64" id="menu_customer_export_history"  name="Export Customer History Report"/>



    </data>
</openerp>