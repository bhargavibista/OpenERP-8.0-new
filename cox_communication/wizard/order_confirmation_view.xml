<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="action_order_confirmation_wizard" model="ir.ui.view">
            <field name="name">action.order.confirmation.wizard</field>
            <field name="model">order.confirmation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Order Confirmation">
                    <group colspan="4" col="4">
                    <field name="order_info" nolabel="1" colspan="4" />
                    </group>
                    <newline/>
                    <button name="want_to_close" string="Add Product" type="object" icon="terp-gtk-go-back-ltr"/>
                    <button name="proceed_to_checkout" string="Proceed Further" type="object" icon="terp-gtk-go-back-rtl"/>
                </form>
            </field>
        </record>

        <record id="action_order_confirmation" model="ir.actions.act_window">
            <field name="name">Order Confirmation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">order.confirmation</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="action_order_confirmation_wizard"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
