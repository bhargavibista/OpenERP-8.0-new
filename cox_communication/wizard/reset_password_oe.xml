<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_reset_password_oe" model="ir.ui.view">
            <field name="name">view.reset.password.oe</field>
            <field name="model">reset.password.oe</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reset Password">
                    <field name="magento_location" required="1" widget="selection"/>
                    <newline/>
                    <field name="emailid" readonly="1"/>
                    <newline/>
                    <field name="password" on_change="onchange_password(password,context)" required="1"/>
                    <newline/>
                    <field name="send_email" on_change="onchange_send_email(send_email,context)"/>
                    <newline/>
                    <separator string ="Email Body"/>
                    <newline/>
                    <field name="email_subject" attrs="{'invisible':[('send_email','=',False)],'required':[('send_email','=',True)]}"/>
                    <newline/>
                    <field name="email_body" attrs="{'invisible':[('send_email','=',False)],'required':[('send_email','=',True)]}"/>
                    <newline/>
                    <button name="reset_password" string="Reset Password" type="object"/>
               </form>
            </field>
        </record>

        <act_window name="Reset Password"
            res_model="reset.password.oe"
            src_model="res.partner"
            view_mode="form"
            target="new"
            id="action_reset_password_oe"/>
    </data>
</openerp>

