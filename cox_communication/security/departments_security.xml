<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="group_retail_store" model="res.groups">
            <field name="name">Retail Store Access</field>
        </record>
        <record id="group_call_center" model="res.groups">
            <field name="name">Call Center</field>
        </record>
        <record id="group_hide" context="{'noadmin':True}" model="res.groups">
            <field name="name">Hide Menues</field>
        </record>
        <record id="group_gcluster" model="res.groups">
            <field name="name">GCluster Access</field>
        </record>
	<record id="group_third_party_reseller" model="res.groups">
            <field name="name">Third Party Reseller</field>
        </record>
        <record id="cox_reatil_order_store_rule" model="ir.rule">
        <field name="name">Retail Order Rules</field>
        <field ref="model_sale_order" name="model_id"/>
        <field eval="True" name="global"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_retail_store')),(4, ref('group_call_center'))]"/>
        </record>
        <record id="cox_return_order_sale_order_rule" model="ir.rule">
        <field name="name">Return Sales Orders</field>
        <field ref="model_sale_order" name="model_id"/>
        <field eval="True" name="global"/>
        <field name="domain_force">[('user_id','!=',user.id)]</field>
        <field eval="0" name="perm_unlink"/>
        <field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
        <field name="groups" eval="[(4, ref('group_retail_store')),(4, ref('group_call_center'))]"/>
        </record>
        <record id="cox_reatil_return_store_rule" model="ir.rule">
            <field name="name">Sales Return Rules</field>
            <field ref="model_return_order" name="model_id"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_retail_store')),(4, ref('group_call_center'))]"/>
        </record>
        <record id="cox_sales_manager_sale_order" model="ir.rule">
            <field name="name">All Sales Orders</field>
            <field ref="model_sale_order" name="model_id"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_manager'))]"/>
        </record>
        <record id="cox_sales_manager_return_order" model="ir.rule">
            <field name="name">All Sales Return Orders</field>
            <field ref="model_return_order" name="model_id"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_manager'))]"/>
        </record>

        <record id="group_vista_warehouse" model="res.groups">
            <field name="name">Vista Warehouse</field>
        </record>
    </data>
</openerp>
