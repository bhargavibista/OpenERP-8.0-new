<?xml version="1.0" encoding="UTF-8"?>
<openerp><data>
<!-- Record to Add Sales Channel in Sales Analysis Report-->
        <record id="view_sales_channel_sales_analysis" model="ir.ui.view">
            <field name="name">view.sales.channel.sales.analysis</field>
            <field name="model">sale.report</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="sale.view_order_product_search" />
            <field name="arch" type="xml">
                <xpath expr="/search/group[@string='Group By...']/filter[@name='Customer']" position="after">
                    <filter string="Order Name" context="{'group_by':'so_name'}"/>
                </xpath>
                <xpath expr="/search/group[@string='Group By...']" position="after">
                    <newline/>
                    <group expand="2" string='Sales Channels'>
                        <filter string="Sales Channels" icon="terp-go-home" context="{'group_by':'cox_sales_channels'}"/>
                        <filter string="Retail Store" domain="[('cox_sales_channels','=','retail')]"/>
                        <filter string="Call Center" domain="[('cox_sales_channels','=','call_center')]"/>
                        <filter string="Ecommerce" domain="[('cox_sales_channels','=','ecommerce')]"/>
                        <filter string="Locations" context="{'group_by':'location_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        <!-- to Show Order Name in the report tree view -->
        <record id="view_sale_order_name_tree" model="ir.ui.view">
            <field name="name">view.sale.order.name.tree</field>
            <field name="model">sale.report</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="sale.view_order_product_tree" />
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='date']" position="after">
                    <field name="so_name" invisible="1"/>
                    <field name="cox_sales_channels" invisible="1"/>
                    <field name="location_id" invisible="1"/>
                </xpath>
            </field>
        </record>
        </data></openerp>