<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_service_config_filter" model="ir.ui.view">
            <field name="name">view.service.config.filter</field>
            <field name="model">service.configuration</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Upgrade/Downgrade">
                   <field name="no_days"/>
                   <field name="scheduler_type"/>
                </search>
            </field>
        </record>

        <record id="view_service_configuration_tree_view" model="ir.ui.view">
            <field name="name">view.service.configuration.tree.view</field>
            <field name="model">service.configuration</field>
            <field name="type">tree</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Upgrade/Downgrade">
                    <field name="no_days"/>
                    <field name="scheduler_type"/>
                </tree>
            </field>
        </record>

        <record id="view_service_configuration_form_view" model="ir.ui.view">
            <field name="name">view.service.configuration.form.view</field>
            <field name="model">service.configuration</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Service Configuration" version="7.0">
                    <group>
                        <field name="no_days"/>
                        <field name="scheduler_type"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_service_configuration" model="ir.actions.act_window">
            <field name="name">Service Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.configuration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_service_configuration_tree_view"/>
        </record>
        <menuitem action="action_service_configuration" id="menu_service_configuration" parent="base.menu_config" />
    </data>
</openerp>
