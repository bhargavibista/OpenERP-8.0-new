<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <menuitem id="menu_reporting_custom_report"
                    parent="base.menu_reporting"
                    sequence="25" name="Custom Reports/Dashboards"
		    groups="group_internal_operations,group_internal_operations_manager"/>
        <record id="view_churn_graph_board" model="ir.ui.view">
            <field name="name">report.churn.analysis.graph</field>
            <field name="model">report.churn.analysis</field>
            <field name="arch" type="xml">
                <graph string="Churn Analysis" type="bar">
                     <field name="return_cancel_reason" />
                     <field name="return_count" operator="+"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_churn_analysis_report">
            <field name="name">Churn Reason Analysis</field>
            <field name="res_model">report.churn.analysis</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
            <field name="domain"></field>
            <field name="view_id" ref="view_churn_graph_board"></field>
            <field name="context">{'group_by_no_leaf':1,'group_by':['return_cancel_reason']}</field>
         </record>
         
        <menuitem   id="menu_board_churn"
                    parent="menu_reporting_custom_report"
                    action="action_churn_analysis_report"
                    sequence="1"/>
    </data>
</openerp>
