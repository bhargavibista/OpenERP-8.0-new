<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_export_csv_wizard_analysis_report" model="ir.ui.view">
            <field name="name">Export CSV</field>
            <field name="model">inventory.analysis.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export CSV">
                    <separator string="Analysis Report" colspan="4"/>
                    <group colspan="2">
                    <field name="csv_file" string="File"  readonly="1" filename='name'/>
                    <field name="name" readonly="1" invisible="1" colspan="2" attrs="{'invisible':[('csv_file','=','')]}"/>
                    </group>
                    <newline/>
                    <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    <button name="export_csv_analysis_report" string="Export" type="object" icon="gtk-apply"/>
                    
                </form>
            </field>
        </record>

         <record id="action_export_inventory_analysis_custom_report_cox" model="ir.actions.act_window">
            <field name="name">Inventory Analysis Report(Custom)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory.analysis.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_export_csv_wizard_analysis_report"/>
            <field name="target">new</field>
        </record>
        


        
        <menuitem action="action_export_inventory_analysis_custom_report_cox" id="menu_action_report_inventory_report_cox" parent="menu_reporting_custom_report" sequence="6"/>



    </data>
</openerp>
