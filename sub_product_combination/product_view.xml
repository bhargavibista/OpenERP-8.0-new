                                        <field  name="qty" required="True"/>
                                        <field  name="price"/>
                                    </group>
                                </form>
                                <tree string="Extra Product Configuration">
                                    <field name="name"/>
                                    <field  name="comp_product_id" />
                                    <field  name="qty"/>
                                    <field  name="price"/>
                                </tree>
                            </field>
                        </page>
                    <!--</notebook>-->
                    </xpath>
                </data>
                
            </field>
        </record>
    </data>
